<%= form.label :login %> 
<% if params[:action] == "edit" %> 
	: <%= @user.login %> 
<% else %>	
  <br />
	<%= form.text_field :login %>
<% end %>	
<br style="clear:both" />
<%= error_message_on "user", "login" %><br />

